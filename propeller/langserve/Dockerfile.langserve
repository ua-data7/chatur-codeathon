FROM python:3.10.13-bookworm

WORKDIR  /opt/langserve
COPY . .

ENV HOST=0.0.0.0
ENV PORT=8000
ENV VECTORSTORE=/opt/vectorstore
ENV OLLAMA_HOST=localhost
ENV MODEL=mixtral

RUN mkdir -p ${VECTORSTORE}

RUN apt update && \
    apt install -y gcc

RUN pip3 install --upgrade pip && \
    pip3 install -r requirements.langclient.txt

EXPOSE ${PORT}

ENTRYPOINT ["/bin/bash", "-c", "python3 /opt/langserve/langclient.py ${HOST} ${PORT} ${VECTORSTORE} ${OLLAMA_HOST} ${MODEL}"]
